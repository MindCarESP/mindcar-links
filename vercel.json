{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/reset/password",  "destination": "/reset/password/index.html" },
    { "source": "/reset/password/", "destination": "/reset/password/index.html" }
  ],

  "headers": [
    {
      "source": "/.well-known/assetlinks.json",
      "headers": [
        { "key": "Content-Type", "value": "application/json; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=300, must-revalidate" }
      ]
    },
    {
      "source": "/reset/password",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/reset/password/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.mindcar.es" }],
      "destination": "https://mindcar.es/:path*",
      "permanent": true
    }
  ]
}
